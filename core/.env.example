# Heurist API Configuration
HEURIST_API_KEY=your_api_key_here  # Required: Your Heurist API key for accessing LLM and other services
HEURIST_BASE_URL=https://llm-gateway.heurist.xyz/v1  # Required: Base URL for Heurist API services

# Model Configuration
LARGE_MODEL_ID=anthropic/claude-3.5-haiku  # Optional: ID for the large language model (default: anthropic/claude-3.5-haiku)
SMALL_MODEL_ID=anthropic/claude-3.5-haiku  # Optional: ID for the small language model (default: same as LARGE_MODEL_ID)

# Image Generation Configuration
IMAGE_MODEL_ID=AnimagineXL  # Optional: Model for image generation (default: random choice from available models)
IMAGE_GENERATION_PROBABILITY=0.3  # Optional: Probability of generating images (default: 0.3)
BASE_IMAGE_PROMPT=""  # Optional: Base prompt to prepend to all image generation requests

# Search Configuration
FIRECRAWL_KEY=your_firecrawl_key_here  # Optional: Required only if using search functionality
FIRECRAWL_BASE_URL=https://api.firecrawl.xyz  # Optional: Base URL for Firecrawl API

# Sequencer Configuration
HEURIST_SEQUENCER_URL=https://sequencer.heurist.xyz  # Optional: URL for the Heurist sequencer service

# Credits System Configuration (Optional)
HEURIST_CREDITS_DEDUCTION_API=  # Optional: URL for credits deduction API
HEURIST_CREDITS_DEDUCTION_AUTH=  # Optional: Authentication for credits deduction API

# Vector Storage Configuration (Optional)
POSTGRES_HOST=localhost  # Optional: PostgreSQL host for vector storage
POSTGRES_PORT=5432  # Optional: PostgreSQL port
POSTGRES_DB=heurist  # Optional: PostgreSQL database name
POSTGRES_USER=postgres  # Optional: PostgreSQL username
POSTGRES_PASSWORD=postgres  # Optional: PostgreSQL password
